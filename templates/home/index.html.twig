{% extends "base.html.twig"  %}

{% block title %} Accueil {% endblock %}

{% block body %}

<h1 class="text-center pt-3"> Bienvenue sur la page d'Accueil</h1>

<div class="row">

  <div class="col-md-8">
    <div class="row p-5 m-2">
      {% for article in articles %}
        
        <div class="card col-md-4" style="width: 18rem;">
            <p class="date">Ecrit le {{ article.dateDecreation | date("d/m/Y") }} Ã  {{ article.dateDecreation | date("H:i") }}
              par <span class="author">{{article.author}}</span>
            </p>
            <img class="card-img-top" src="/assets/blog/images/{{ article.image }}" alt="{{ article.title }}">
            <div class="card-body">
             {% if article.title != 'Tata' %}
               <h5 class="card-title">{{ article.title }}</h5>
            {% endif %}
              
              <a href="{{ path('show',{'id':article.id})}}" class="btn btn-primary">En savoir plus</a>
            </div>
        </div>
      {% endfor %}
    </div>
  </div>
  <div class="col-md-4 pt-5">
    <ul class="list-group">
      {% for categorie in categories %}
      <li class="list-group-item d-flex justify-content-between align-items-center"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">
        <a href="{{ path('show_article', {'id':categorie.id}) }}">{{categorie.title}}
          </font></font><span class="badge bg-primary rounded-pill"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{categorie.articles | length}}article(s)</font></font></span>
        </a>
      </li>
      {% endfor %}
    </ul>
  </div>

  
</div>


{% endblock %}
