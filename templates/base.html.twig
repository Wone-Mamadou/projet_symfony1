<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="/assets/css/bootstrap.min.css" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />

        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" href="{{ asset('assets/css/style.css')}}" />
        
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/home"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Blog</font></font></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Basculer la navigation">
                        <span class="navbar-toggler-icon"></span>
                     </button>

                    <div class="collapse navbar-collapse" id="navbarColor01">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link active" href="/home"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Accueil
                                    </font></font><span class="visually-hidden"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">(current)</font></font></span>
                                </a>
                            </li>
                            
                
                        </ul>
                        
                            <a href="{{ path('admin')}}" class="btn btn-light my-2 my-sm-0" type="submit">
                                <font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Administrateur</font></font>
                            </a>
                            {# &nbsp;  &nbsp; #}

                            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                                {% if app.user %}
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Mon compte</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ path('app_logout') }}">Me d√©connecter</a>
                                    </li>
                                {% else %}
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ path('inscription') }}">M'inscrire</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ path('connexion') }}">Me Connecter</a>
                                    </li>
                                {% endif %}
                            </ul>
                        
                    </div>
                </div>
            </nav>

        </header>

        <div class="container-fluid">
            {% block body %}{% endblock %}
        </div>
       
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
