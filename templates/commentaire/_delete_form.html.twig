<form method="post" action="{{ path('app_commentaire_delete', {'id': commentaire.id}) }}" onsubmit="return confirm('Êtes vous sûr de vouloir supprimer?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commentaire.id) }}">
    <input type="hidden" name="article" value="{{ article.id }}">
    <button class="btn btn-primary"><i class="fas fa-pen"> Supprimer</i></button>
</form>
